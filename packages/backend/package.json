{
  "name": "backend",
  "description": "Backend de Nikola",
  "version": "2025.2.24",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && npm run copy-templates",
    "build:dev": "tsc --watch",
    "serve:dev": "node --no-deprecation --watch dist/server.js",
    "dev": "concurrently \"npm run build:dev\" \"npm run serve:dev\"",
    "serve": "node --no-deprecation dist/server.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/orm/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/orm/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/orm/data-source.ts",
    "seed:almacenes": "npx ts-node src/orm/seeds/almacenes.seed.ts",
    "seed:proveedores": "npx ts-node src/orm/seeds/proveedores.seed.ts",
    "seed:categorias": "npx ts-node src/orm/seeds/categorias.seed.ts",
    "seed:privilegios": "npx ts-node src/orm/seeds/privilegios.seed.ts",
    "seed:productos": "npx ts-node src/orm/seeds/productos.seed.ts",
    "copy-templates": "cp -r src/providers/pdf/templates dist/providers/pdf/"
  },
  "keywords": [
    ""
  ],
  "author": "Victor Noguera",
  "license": "Proprietary",
