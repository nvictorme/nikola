    "date-fns": "^4.1.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.0",
    "firebase-admin": "13.0.2",
    "helmet": "8.0.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongodb": "^5.9.2",
    "morgan": "^1.10.0",
    "nanoid": "^5.1.0",
    "node-cron": "^3.0.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
